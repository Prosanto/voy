<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgroundstarfree">

        <LinearLayout
            android:id="@+id/topLayouit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="@dimen/home_top_icon"
                android:layout_height="@dimen/home_top_icon"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@drawable/logo_image" />

            <TextView
                android:id="@+id/text_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_logo"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="50dp"
                android:gravity="center"
                android:text="@string/firstpage_title"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/home_top_text" />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btn_subscribe_home"
            android:layout_below="@+id/topLayouit"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layoutCard"
                android:layout_width="match_parent"
                android:layout_height="@dimen/home_card_hegiht"
                android:layout_centerInParent="true">

                <eu.coach_yourself.app.wenchao.cardstack.CardStack
                    android:id="@+id/containerCard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:gravity="center"
                    android:padding="10dp"
                    app:card_enable_loop="true"
                    app:card_enable_rotation="false"
                    app:card_gravity="top"
                    app:card_margin="0dp"
                    app:card_stack_size="4" />
            </RelativeLayout>

            <View
                android:id="@+id/sjow"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_below="@+id/layoutCard"></View>


        </RelativeLayout>


        <Button
            android:id="@+id/btn_subscribe_home"
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_botom_hieght"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/mybutton_bg"
            android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
            android:drawablePadding="10dp"
            android:ellipsize="end"
            android:fontFamily="@font/rubik_regular"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"
            android:singleLine="true"
            android:text="@string/firstpage_btn"
            android:textAllCaps="false"
            android:textSize="@dimen/home_botom_text" />


    </RelativeLayout>

</RelativeLayout>
