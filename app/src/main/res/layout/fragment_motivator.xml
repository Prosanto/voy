<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Motivator_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundstarfree">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="25dp"
                        android:fontFamily="@font/rubik_medium"
                        android:text="@string/Motivatoreinrichten"
                        android:textColor="@color/white"
                        android:textSize="25dp"></TextView>

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_margin="20dp"
                        android:src="@drawable/leaf1"></ImageView>

                    <Button
                        android:id="@+id/btn_add_reminder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/mybutton_bg2"
                        android:drawableRight="@drawable/ic_baseline_add_24"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/rubik_regular"
                        android:gravity="left"
                        android:paddingStart="20dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="8dp"
                        android:text="@string/addmotivator"
                        android:textAllCaps="false"
                        android:textSize="18dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycle_reminder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>

                    <TextView
                        android:id="@+id/txt_motivedetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="25dp"
                        android:fontFamily="@font/rubik_regular"
                        android:text="@string/motivator_detail"
                        android:textColor="@color/white"
                        android:textSize="17dp" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>